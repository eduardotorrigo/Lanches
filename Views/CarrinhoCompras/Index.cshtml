@model CarrinhoCompraViewModel

<div class="container">
    <div class="row">
        <img src="~/images/Full-Cart-icon.png" />
        <div><h4>Seu carrinho de compras : </h4></div>
        <br />
        <table class="table table-bordered table-striped">
            <tr>
                <th>Quantidade</th>
                <th>Lanches</th>
                <th class="text-right">Pre√ßo</th>
                <th class="text-right">Subtotal</th>
                <th></th>
            </tr>
            <tbody>
                @foreach (var item in Model.CarrinhoCompra.CarrinhoCompraItems)
                {
                    <tr>
                        <td class="text-center">@item.Quantidade</td>
                        <td class="text-left">@item.Lanche.Nome</td>
                        <td class="text-right">@item.Lanche.Preco.ToString("C")</td>
                        <td class="text-right">@item.Quantidade * @item.Lanche.Preco.ToString("C")</td>
                        <td class="text-center">
                            <a asp-controller="CarrinhoCompras" asp-action="RemoverItemDoCarrinhoCompra"
                            asp-route-lancheId="@item.LancheId"><img src="~/images/delete.png"></a>
                        </td>
                    </tr>
                }

            </tbody>
            <tfoot>
                <tr>

                    <td colspan="3" class="text-right"><b>Total: </b></td>
                    <td class="text-center"><b>@Model.CarrinhoCompraTotal </b></td>
                    <td></td>
                </tr>
            </tfoot>
        </table>
        <div class="text-right">
            <div class="btn-group">
                <a class="btn btn-success" asp-controller="Pedido" asp-action="Checkout">Encerrar Pedido</a>
                &nbsp;&nbsp;&nbsp;
                <a class="btn btn-primary" asp-controller="Lanche" asp-action="List">Continuar Comprando</a>
            </div>
        </div>
        <br />
    </div>
</div>