@model Lanche

<div class="col-sm-4 col-md-4 col-lg-4">
    <p><img src="@Model.ImagemUrl" class="img-fluid" asp-append-version="true"></p>

    <h3>@Model.Preco.ToString("C")</h3>
    <h4>
        <a asp-controller="Lanches" asp-action="Details" 
        asp-route-lancheId="@Model.LancheId">@Model.Nome</a>
    </h4>
    <p>@Model.DescricaoCurta</p>
    <div>
        <p><a class="btn btn-primary" id="cartButton" asp-controller="CarrinhoCompras" 
        asp-action="AdicionarItemNoCarrinhoCompra" asp-route-lancheId="@Model.LancheId">Incluir no Carrinho</a></p>
    </div>
</div>